import tkinter as tk

class Kontakt:
    def __init__(self, ime, email, telefon):
        self.ime = ime
        self.email = email
        self.telefon = telefon

    def __str__(self):
        return (f'{self.ime} {self.email} {self.telefon}')

class ImenikApp:
    def __init__(self, root):
        self.root = root
        self.root.title('Imenik kontakata')
        self.kontakti = []

        frame_gornji = tk.Frame(root)
        frame_gornji.pack(pady=10)

        tk.Label(frame_gornji, text='Ime i prezime:').grid(row=0, column=0)
        tk.Label(frame_gornji, text='Email:').grid(row=1, column=0)
        tk.Label(frame_gornji, text='Telefon:').grid(row=2, column=0)

        self.entry_ime = tk.Entry(frame_gornji, width=30)
        self.entry_email = tk.Entry(frame_gornji, width=30)
        self.entry_telefon = tk.Entry(frame_gornji, width=30)

        self.entry_ime.grid(row=0, column=1)
        self.entry_email.grid(row=1, column=1)
        self.entry_telefon.grid(row=2, column=1)

        tk.Button(frame_gornji, text="Dodaj kontakt", command=self.dodaj_kontakt).grid(row=3, column=0, columnspan=2, pady=5)

        frame_donji = tk.Frame(root)
        frame_donji.pack()

        self.listbox = tk.Listbox(frame_donji, width=60, height=10)
        self.listbox.pack(side=tk.LEFT, fill=tk.BOTH)

        scrollbar = tk.Scrollbar(frame_donji)
        scrollbar.pack(side=tk.RIGHT, fill=tk.Y)
        self.listbox.config(yscrollcommand=scrollbar.set)
        scrollbar.config(command=self.listbox.yview)

        frame_dno = tk.Frame(root)
        frame_dno.pack(pady=10)

        tk.Button(frame_dno, text="Spremi kontakte", command=self.spremi_u_csv).grid(row=0, column=0, padx=5)
        tk.Button(frame_dno, text="Učitaj kontakte", command=self.ucitaj_iz_csv).grid(row=0, column=1, padx=5)
        tk.Button(frame_dno, text="Obriši kontakt", command=self.obrisi_kontakt).grid(row=0, column=2, padx=5)

        self.ucitaj_iz_csv()

    
    def dodaj_kontakt(self):
        ime = self.entry_ime.get().strip()
        email = self.entry_email.get().strip()
        telefon = self.entry_telefon.get().strip()

        if not ime or not email or not telefon:
            messagebox.showwarning("Greška", "Sva polja moraju biti ispunjena!")
            return

        kontakt = Kontakt(ime, email, telefon)
        self.kontakti.append(kontakt)
        self.osvjezi_listbox()

        self.entry_ime.delete(0, tk.END)
        self.entry_email.delete(0, tk.END)
        self.entry_telefon.delete(0, tk.END)

    def osvjezi_listbox(self):
        self.listbox.delete(0, tk.END)
        for k in self.kontakti:
            self.listbox.insert(tk.END, str(k))

    def spremi_u_csv(self):
        with open("kontakti.csv", "w", newline="", encoding="utf-8") as f:
            writer = csv.writer(f)
            for k in self.kontakti:
                writer.writerow([k.ime, k.email, k.telefon])
        messagebox.showinfo("Uspjeh", "Kontakti su spremljeni!")

    def ucitaj_iz_csv(self):
        self.kontakti.clear()
        if not os.path.exists("kontakti.csv"):
            return
        try:
            with open("kontakti.csv", "r", encoding="utf-8") as f:
                reader = csv.reader(f)
                for row in reader:
                    if len(row) == 3:
                        ime, email, telefon = row
                        self.kontakti.append(Kontakt(ime, email, telefon))
            self.osvjezi_listbox()
        except Exception as e:
            messagebox.showerror("Greška", f"Ne mogu učitati kontakte: {e}")

    def obrisi_kontakt(self):
        odabrani = self.listbox.curselection()
        if not odabrani:
            messagebox.showwarning("Greška", "Odaberite kontakt za brisanje!")
            return
        indeks = odabrani[0]
        self.kontakti.pop(indeks)
        self.osvjezi_listbox()


if __name__ == "__main__":
    root = tk.Tk()
    app = ImenikApp(root)
    root.mainloop()
